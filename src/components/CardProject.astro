---

import { Image } from 'astro:assets';
interface Props {
    name: string;
    type: string;
    image: any;
}
const {name, type, image } = Astro.props;
const backgroundImage = image;
---
<div class="card w-80 h-80 rounded-lg">
    <div class="p-4 h-full rounded-lg relative">
        <span class="bg-primary text-white px-4 py-1 rounded-3xl text-xs">Private</span>
        <div class="card-info absolute bottom-0 mb-4 z-10">
            <h6 class="text-white ">{name}</h6>
            <p class="text-white text-xs">FrontEnd</p>
            <div class="flex items-center gap-4 my-4">
                <i class="text-white fa-brands fa-vuejs"></i>
                <i class="text-white fa-brands fa-sass"></i>
            </div>
        </div>
        
    </div>
</div>
<style>
.card {
    background-image: url('../assets/images/projects/nubi/1.png');
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center;
    cursor: pointer;
    position: relative;
    
    transition: all ease .3s;
}
.card :is(span, .card-info) {
    opacity: 0;
    transition: all ease .3s;
}
.card::before {
    content: '';
    position: absolute;
    top:0;
    left:0;
    width:100%;
    height: 100%;
    z-index:2;
    transition: all ease .3s;
    opacity: 0;
    background: linear-gradient(transparent,var(--background));
    border-radius: 0.5rem;
}
.card:hover {
    transform: translateY(10px)
}
.card:hover::before {
    opacity: 1;
}
.card:hover :is(span,.card-info) {
    transform: translateY(10px);
    opacity: 1
}
</style>